<% if current_customer %>
  <% if current_customer.like?(meal) %>
    <label class="switch" id="on_<%= meal.id %>" onclick="likeFunction(<%= meal.id %>)">
      <input type="checkbox" checked>
      <span class="slider round"></span>
    </label>
  <% else %>
  <label class="switch" id="off_<%= meal.id %>" onclick="likeFunction(<%= meal.id %>)">
      <input type="checkbox">
      <span class="slider round"></span>
    </label>
  <% end %>
<% else %>
  <label class="switch">
    <input type="checkbox">
    <span class="slider round"></span>
  </label>
<% end %>
<%= button_to "like", like_path(meal_id: meal.id), remote: true, :id => "like_#{meal.id}", :style => "display: none;" %>