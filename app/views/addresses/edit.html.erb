<div class="card">
  <%= form_for @address, :html => { multipart: true, :class => "form-horizontal meal" } do |f| %>
  <% if @address.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@address.errors.count, "error") %> prohibited this meal from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @address.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :street, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :street, :class => 'form-control' %>
    </div>
    <%= f.error_span(:street) %>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :city, :class => 'form-control' %>
    </div>
    <%= f.error_span(:city) %>
  </div>
  <div class="form-group">
    <%= f.label :postcode, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :postcode, :class => 'form-control' %>
    </div>
    <%=f.error_span(:postcode)%>
  </div>
  <div class="form-group">
    <%= f.label :details, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :details, :class => 'form-control' %>
    </div>
    <%= f.error_span(:details) %>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone)%>
  </div>
  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%#= link_to t('.cancel', :default => t("helpers.links.cancel")),
                meals_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
</div>