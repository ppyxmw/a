    <%= f.select :sunday, [['0 meals','0'],['1 meal','1'],['2 meals','2'],['3 meals','3'],['4 meals','4'],['5 meals','5'],['6 meals','6']] %>
  </div>
 </div>
  <%= f.submit "Save plan", :class => 'btn btn-success' %>&nbsp;&nbsp;<%= link_to "All plans", mealplans_path, :class => 'btn btn-default'%>
 <% end %>							
</div>
