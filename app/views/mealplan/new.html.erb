    <%= f.select :friday, [['0 meals','0'],['1 meal','1'],['2 meals','2'],['3 meals','3'],['4 meals','4'],['5 meals','5'],['6 meals','6']] %>
  </div>
 </div>
 <div class="form-group">
  <%= f.label :saturday, :class => 'control-label col-sm-2' %>
  <div class="col-sm-1">
    <%= f.select :saturday, [['0 meals','0'],['1 meal','1'],['2 meals','2'],['3 meals','3'],['4 meals','4'],['5 meals','5'],['6 meals','6']] %>
  </div>
 </div>
 <div class="form-group">
  <%= f.label :sunday, :class => 'control-label col-sm-2' %>
